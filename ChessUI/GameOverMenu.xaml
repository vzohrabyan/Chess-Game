<UserControl x:Class="ChessUI.GameOverMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Width="275"
            Height="125"
            Style="{StaticResource BorderStyle}">
        <Grid Margin="-4,0,4,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                       x:Name="WinnerText"
                       Text="WINNER TEXT"
                       Style="{StaticResource TextStyle}"
                       FontSize="28" Grid.ColumnSpan="2" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="60,0,0,0"/>

            <TextBlock
                       Grid.Row="1"
                       x:Name="ReasonText"
                       Text="REASON TEXT"
                       Style="{StaticResource TextStyle}"
                       FontSize="16" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="67,0,0,0"/>
            <Button Grid.Row="2"
                    Content="Restart"
                    Style="{StaticResource ButtonStyle}"
                    Width="80"
                    Height="30"
                    Click="Restart_Click"/>
            <Button Grid.Row="2"
                    Grid.Column="1"
                    Content="Exit"
                    Style="{StaticResource ButtonStyle}"
                    Width="80"
                    Height="30"
                    Click="Exit_Click"/>
        </Grid>
    </Border>
</UserControl>
